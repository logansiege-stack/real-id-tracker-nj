  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Real ID Appointment Tracker</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background:#f5f5f5;
      padding:30px;
      text-align:center;
    }
    #status {
      font-size: 1.4rem;
      margin-top:20px;
      font-weight:bold;
    }
    .good { color: green; }
    .bad { color: red; }
  </style>
</head>
<body>
  <h1>NJ Real ID Appointment Tracker (Wayne MVC)</h1>
  <p>This page automatically checks every 10 minutes for appointment availability before February.</p>

  <div id="status">Starting tracker…</div>

  <script>
    async function checkAppointments() {
      const status = document.getElementById("status");

      try {
        // Use a public proxy to avoid browser CORS blocks
        const proxy = "https://api.allorigins.win/get?url=";
        const target = encodeURIComponent("https://telegov.njportal.com/njmvc/AppointmentWizard/12");

        const response = await fetch(proxy + target);
        const data = await response.json();

        const text = data.contents.toLowerCase();

        if (text.includes("no appointments")) {
          status.textContent = "No appointments available right now.";
          status.className = "bad";
        } else {
          status.textContent = "⚠️ POSSIBLE APPOINTMENT OPENING! CHECK NOW!";
          status.className = "good";
          alert("⚠️ Appointment may be available at Wayne MVC! Go check the site.");
        }
      } catch (e) {
        status.textContent = "Error checking appointments: " + e;
        status.className = "bad";
      }
    }

    checkAppointments();
    setInterval(checkAppointments, 600000); // 10 minutes
  </script>
</body>
